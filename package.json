{
  "name": "api-nest-starter",
  "version": "0.1.0",
  "description": "description",
  "author": "David Vila√ßa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidpvilaca/api-nest-starter.git"
  },
  "bugs": {
    "url": "https://github.com/davidpvilaca/api-nest-starter/issues"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:spec": "tslint src/**/*.spec.ts -p package.json -c tslint.json",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:dev": "nodemon",
    "start:hmr": "node dist/server",
    "start:prod": "node dist/main.js",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "tsfmt": "tsfmt --no-tslint --no-vscode --verbose -r",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "dotenv": "^6.1.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@nestjs/testing": "^5.4.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.5",
    "@types/supertest": "^2.0.6",
    "codelyzer": "^4.5.0",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.1",
    "rimraf": "^2.6.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6",
    "typescript-formatter": "^7.2.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint -c tslint.json ",
      "prettier --write",
      "tsfmt",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged"
    }
  }
}
